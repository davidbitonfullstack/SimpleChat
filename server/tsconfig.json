{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2016", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*", "src/typings/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
